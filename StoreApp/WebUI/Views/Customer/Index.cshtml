@model IEnumerable<WebUI.Models.CustomerVM>

<div class="text-center">
    <h1>Customer Page</h1>
    <br />
    <a class="btn btn-primary text-white" asp-controller="Customer" asp-action="Create">Add Customer</a>
    <form>
        <input type="text" id="search_name" name="search_name" />
        <button type="submit" class="btn btn-primary text-white">Search</button>
    </form>
    <br />
    <br />
    <h2>List of Customers</h2>
    <table class="table table-hover">
        <tr>
            <th>Customer ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone #</th>
            <th>Email Address</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (CustomerVM customer in Model)
         {
            <tr>
                <td>@Html.DisplayFor(c => customer.CustId)</td>
                <td>@Html.DisplayFor(c => customer.Name)</td>
                <td>@Html.DisplayFor(c => customer.Address)</td>
                <td>@Html.DisplayFor(c => customer.PhoneNumber)</td>
                <td>@Html.DisplayFor(c => customer.Email)</td>
                <td>
                    <button class="btn btn-primary">@Html.ActionLink("Orders", "Details", "Order", new { custId = customer.CustId }, new { @style = "color: white" })</button>
                </td>
                <td>
                    <button class="btn btn-primary">@Html.ActionLink("Place Order", "Create", "Order", new { custId = customer.CustId }, new { @style = "color: white" })</button>
                </td>
            </tr>
         }
    </table>
</div>