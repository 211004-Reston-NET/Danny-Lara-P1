@model IEnumerable<WebUI.Models.LineItemVM>

<div class="text-center">
    <h1>Cart Products</h1>
    <table class="table table-hover">
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
        @foreach (LineItemVM item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(i => item.ProductID)</td>
                <td>@Html.DisplayFor(i => item.ProductName)</td>
                <td>@Html.DisplayFor(i => item.Price)</td>
                <td>@Html.DisplayFor(i => item.Quantity)</td>
            </tr>
        }
    </table>
    <p>Total price: $@ViewBag.TotalPrice</p>
    <button class="btn btn-primary">@Html.ActionLink("Add More Items", "ChosenStore", "Order", new { storeId = ViewBag.StoreId, custId = ViewBag.CustId }, new { @style = "color: white" })</button>
    <button class="btn btn-primary">@Html.ActionLink("Place Order", "PlaceOrder", "Order", new { storeId = ViewBag.StoreId, custId = ViewBag.CustId }, new { @style = "color: white" })</button>
</div>