@model IEnumerable<WebUI.Models.ProductVM>

<div class="text-center">
    <h1>@ViewBag.StoreName Products</h1>
    <table class="table table-hover">
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Quantity in Stock</th>
            <th></th>
        </tr>
        @foreach (ProductVM product in Model)
        {
            <tr>
                <td>@Html.DisplayFor(p => product.Id)</td>
                <td>@Html.DisplayFor(p => product.Name)</td>
                <td>@Html.DisplayFor(p => product.Price)</td>
                <td>@Html.DisplayFor(p => product.Description)</td>
                <td>@Html.DisplayFor(p => product.Quantity)</td>
                <td>
                    <form asp-action="Edit" asp-controller="Product">
                        <input type="number" class="form-control" id="addThis" name="addThis" value=@ViewBag.AddThis/>
                        <input type="hidden" id="id" name="id" value=@product.Id />
                        <button type="submit" id="Edit" class="btn btn-primary text-white">Add Quantity</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>