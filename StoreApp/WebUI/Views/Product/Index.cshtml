@model IEnumerable<WebUI.Models.ProductVM>

<div class="text-center">
    <h1>Store Products</h1>
    <table class="table table-hover">
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Quantity in Stock</th>
            <th></th>
        </tr>
        @foreach (ProductVM product in Model)
        {
            <tr>
                <td>@Html.DisplayFor(p => product.Id)</td>
                <td>@Html.DisplayFor(p => product.Name)</td>
                <td>@Html.DisplayFor(p => product.Price)</td>
                <td>@Html.DisplayFor(p => product.Description)</td>
                <td>@Html.DisplayFor(p => product.Quantity)</td>
                <td>
                    <form>
                        <input type="number" id="add_this" name="add_this" />
                        <button class="btn btn-primary">@Html.ActionLink("Add Quantity", "Edit", "Product", new { productId = product.Id }, new { @style = "color: white" })</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>